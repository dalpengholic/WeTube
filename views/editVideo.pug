extends layouts/main

block content
    .from-container
        form(action=`/videos${routes.editVideo(video.id)}`, method="post")
            input(type="text", placeholder="Title", name="title", value=video.title)
            textarea(name="description", placeholder="Description")=video.description
            input(type="submit", value="Upload Video")
        a.form-container__link.form-container__lint--delete(href=`/videos${routes.deleteVideo}`) Delete Video